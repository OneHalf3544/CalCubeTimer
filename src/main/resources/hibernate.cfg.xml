<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd" >
<hibernate-configuration>

    <session-factory name="thePersistenceUnit">
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:./db/repository</property>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">false</property>

        <mapping class="net.gnehzr.cct.statistics.HibernateProfileDao$ProfileEntity"/>
        <mapping class="net.gnehzr.cct.statistics.ConfigEntity"/>
    </session-factory>
</hibernate-configuration>